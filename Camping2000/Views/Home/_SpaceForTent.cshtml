

<h2>Renting space for a tent.</h2>

@using (Ajax.BeginForm("RentSpaceForTent", "Home",
            ajaxOptions: new AjaxOptions
            {
                UpdateTargetId = "ContentBody",
                InsertionMode = InsertionMode.Replace,
            }))
{
    <div class="form-group">
        @*Html.LabelFor *@
        <div class="row">
            <div class="col-md-2">
                @Html.Label("Arrival date: ")
            </div>
            <div class="col-md-3">
                <input type="date" name="ArrivalDate" min="2018-06-15" />
                @*<input type="date"  min="@(DateTime.Now.Year-DateTime.Now.Month-DateTime.Now.Day)" />*@
            </div>
            <div class="col-md-7">

            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-2">
                @*Html.LabelFor *@
                @Html.Label("Departure date: ")
            </div>
            <div class="col-md-3">
                <input type="date" name="DepartureDate" min="2018-06-16" />
                @*<input type="date" min="@DateTime.Now.Year-@DateTime.Now.Month-@DateTime.Now.Day" />*@
            </div>
            <div class="col-md-7">

            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-2">
                @Html.Label("Number of guests: ")
            </div>
            <div class="col-md-3">
                <input type="number" name="NumberOfGuests" min="1" max="10">
            </div>
            <div class="col-md-7">

            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-2">
                @Html.Label("Do you need electricity: ")
            </div>
            <div class="col-md-3">
                @*Html.RadioButton("Yes", "yes")

                    @Html.RadioButton("No", "no")*@
                <input type="radio" name="Electricity" value="Yes" required>Yes
                <input type="radio" name="Electricity" value="No" checked required> No
            </div>
            <div class="col-md-7">

            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-2">
                @Html.Label("Estimated price: ")
            </div>
            <div class="col-md-3">

            </div>
            <div class="col-md-7">

            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Reserve" class="btn btn-default" />
    </div>
}
