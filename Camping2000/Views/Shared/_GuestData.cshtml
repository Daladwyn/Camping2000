            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(z=>z.LivingAdressZipCode, new { @class = "pull-right" })
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(z => z.LivingAdressZipCode, new { @placeholder = "11111" })
                    @Html.ValidationMessageFor(z => z.LivingAdressZipCode)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(c=>c.LivingAdressCity, new { @class = "pull-right" })
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(c => c.LivingAdressCity)
                    @Html.ValidationMessageFor(c => c.LivingAdressCity)
                </div>
            </div>
        </div>
        <hr />
        <div>
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                <div class="form-group">
                    <input type="submit" value="Complete Registration" class="btn btn-primary" />
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.HiddenFor(g => g.GuestId, Model.GuestId)
