                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(n=>n.GuestLastName, new { @class = "pull-right" })
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(n => n.GuestLastName)
                    @Html.ValidationMessageFor(n => n.GuestLastName)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(n=>n.GuestNationality, new { @class = "pull-right" })
                </div>
