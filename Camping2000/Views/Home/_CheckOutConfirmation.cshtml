@model Camping2000.Models.BookingGuestViewModel

<h2> Check Out Confirmation</h2>

<p>@Model.GuestFirstName @Model.GuestLastName have now been checked Out.</p>
<p>The guest have to be charged: @Model.BookingPrice kr.</p>
<p>Wish the guest a good travel home and welcome again. </p>

<div class="row">
    <div class="col-md-2">
        @using (Ajax.BeginForm("GoToStart", "Home",
            ajaxOptions: new AjaxOptions
            {
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "ContentBody"
            }))
        {
            <input type="submit" value="Back to Start" />
        }
    </div>
    <div class="col-md-2">
        @using (Ajax.BeginForm("CheckOut", "Home",
                   ajaxOptions: new AjaxOptions
                   {
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "ContentBody"
                   }))
        {
            <input type="submit" value="Back to CheckOut" />
        }
    </div>
</div>