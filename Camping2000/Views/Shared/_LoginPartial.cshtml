@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "nav nav-pills nav-stacked" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav nav-pills nav-stacked">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav nav-pills nav-stacked">
        <li>@Html.ActionLink("Bolmens Camping", "Index", "Home"@*, new { area = "" }, new { @class = "navbar-brand" }*@)</li>
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li class="active">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <li>
            @Ajax.ActionLink("Space For Tents","SpaceForTent", new AjaxOptions
   {
      UpdateTargetId = "ContentBody",
      InsertionMode = InsertionMode.Replace
   })
        </li>
        <li>
            @Ajax.ActionLink("Space For caravan/trailer", "SpaceForCaravan", new AjaxOptions
{
UpdateTargetId = "ContentBody",
InsertionMode = InsertionMode.Replace
})
        </li>
    </ul>
}
