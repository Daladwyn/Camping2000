@model Camping2000.Models.Guest
@using (Ajax.BeginForm("ModifySpecificGuestDetails", "Home",
            ajaxOptions: new AjaxOptions
            {
                UpdateTargetId = "ContentBody",
                InsertionMode = InsertionMode.Replace,
            }))
{
    <div class="row">
        <div class="col-md-2">
            @Html.Label("First Name")
        </div>
        <div class="col-md-2">
            @Model.GuestFirstName
        </div>
        <div class="col-md-2">
            @Html.Label("Last Name")
        </div>
        <div class="col-md-2">
            @Model.GuestLastName
        </div>
        <div class="col-md-4">
            <input type="submit" value="Modify Guests Details" />
            @*Ajax.ActionLink("Modify Guests Details", "ModifySpecificGuestDetails", ajaxOptions: new AjaxOptions { UpdateTargetId = "ContentBody", InsertionMode = InsertionMode.Replace })*@
        </div>
    </div>
    <div>
        @Html.Hidden("GuestId",Model.GuestId)
    </div>
}