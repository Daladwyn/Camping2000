@model Camping2000.Models.Booking
<h2>Thank you for your reservation.</h2>

<div>
    <p>
        Your booking with bookingnumber: @Model.BookingId have been recived.
        A mail will shortly be sent to you with details of your reservation.
        This mail can be used when you check in.
    </p>

    @using (Ajax.BeginForm("PrintReservation", "Reservation",
    ajaxOptions: new AjaxOptions
    {
        UpdateTargetId = "ContentBody",
        InsertionMode = InsertionMode.Replace
    }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(b => b.BookingId, @Model.BookingId)
        <input type="submit" value="Print out your reservation" class="btn btn-primary"/>
    }
</div>
