@model Camping2000.Models.BookingGuestViewModel

@using (Ajax.BeginForm("CheckInConfirmation", "Home",
            ajaxOptions: new AjaxOptions
            {
                UpdateTargetId = "ContentBody",
                InsertionMode = InsertionMode.Replace,
            }))
{
    @Html.AntiForgeryToken()
    <div>
        <div class="row">
            <div class="col-md-2">
                @Model.GuestFirstName
            </div>
            <div class="col-md-2">
                @Model.GuestLastName
            </div>
            <div class="col-md-1">
                @Model.BookingId
            </div>
            <div class="col-md-1">
                @Model.NumberOfGuests
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <input type="number" name="NumberOfCheckInGuests" placeholder="Number of Guests" min="1" max="10" />
                </div>
            </div>
            <div class="col-md-">
                <div class="form-group">
                    <input type="submit" name="CheckIn" value="Check In" />
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.HiddenFor(b => b.BookingId, Model.BookingId)
    </div>
}
@ViewBag.Errormessage

