        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(c=>c.PostAdressCity, new { @class = "pull-right" })
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(c => c.PostAdressCity)
                    @Html.ValidationMessageFor(c => c.PostAdressCity)
                </div>
            </div>
        </div>
        <hr />
        <div>
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-10">
                    @*<input type="button" onclick="" value="Copy Livingadress to Postadress" class="btn btn-default" />*@
                </div>
