@model Camping2000.Models.RegistrationDataViewModel

<h2>Please complete the registration for @Model.EmailAddress</h2>
<hr />
@ViewBag.Errormessage
@if (Model != null)
{
    using (Ajax.BeginForm("SaveGuestData", "Home", new AjaxOptions
    {
        UpdateTargetId = "ContentBody",
        InsertionMode = InsertionMode.Replace,
    }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(n=>n.GuestFirstName , new { @class="pull-right" })
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(n=>n.GuestFirstName)
