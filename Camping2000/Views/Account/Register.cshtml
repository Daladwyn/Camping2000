@model Camping2000.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })





    <div class="form-group">
        <div class="col-md-2 control-label">
            @Html.Label("First Name")
        </div>
        <div class="col-md-10">
            @Html.TextBox("UserFirstName")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 control-label">
            @Html.Label("Last Name")
        </div>
        <div class="col-md-10">
            @Html.TextBox("UserLastName")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 control-label">
            @Html.Label("Nationality")
        </div>
        <div class="col-md-10">
            @Html.TextBox("UserNationality")
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-md-2 control-label">
            @Html.Label("LivingAdress Street")
        </div>
        <div class="col-md-10">
            @Html.TextBox("LivingAdressStreet1")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">
            @Html.Label("LivingAdress Street")
        </div>
        <div class="col-md-10">
            @Html.TextBox("LivingAdressStreet2")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">
            @Html.Label("LivingAdress Street")
        </div>
        <div class="col-md-10">
            @Html.TextBox("LivingAdressStreet3")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">
            @Html.Label("LivingAdress ZipCode")
        </div>
        <div class="col-md-10">
            @Html.TextBox("LivingAdressZipCode")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">
            @Html.Label("LivingAdress City")
        </div>
        <div class="col-md-10">
            @Html.TextBox("LivingAdressCity")
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-md-2 control-label">
            
        </div>
        <div class="col-md-10">
    <input type="button" value="Copy Livingadress to Postadress" class="btn btn-default" />
           
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">
            @Html.Label("PostAdress Street")
        </div>
        <div class="col-md-10">
            @Html.TextBox("PostAdressStreet1")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">
            @Html.Label("PostAdress Street")
        </div>
        <div class="col-md-10">
            @Html.TextBox("PostAdressStreet2")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">
            @Html.Label("PostAdress Street")
        </div>
        <div class="col-md-10">
            @Html.TextBox("PostAdressStreet3")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">
            @Html.Label("PostAdress ZipCode")
        </div>
        <div class="col-md-10">
            @Html.TextBox("PostAdressZipCode")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">
            @Html.Label("PostAdress City")
        </div>
        <div class="col-md-10">
            @Html.TextBox("PostAdressCity")
        </div>
    </div>
    <hr />



    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
